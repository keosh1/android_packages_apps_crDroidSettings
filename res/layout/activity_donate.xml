<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/crdroid_donate_title"
        style="@style/TextAppearance.AppCompat.Headline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:layout_centerHorizontal="true"
        android:text="@string/crdroid_donate_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/crdroid_donate_title"
        android:layout_marginEnd="@dimen/logo_horizontal_margin"
        android:layout_marginStart="@dimen/logo_horizontal_margin"
        android:layout_marginTop="@dimen/logo_vertical_margin"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/logo_height"
            android:layout_marginEnd="2dp"
            android:layout_marginStart="2dp"
            android:adjustViewBounds="true"
            android:src="@drawable/support_logo" />

        <TextView
            style="@style/TextAppearance.AppCompat.Subhead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="16dp"
            android:text="@string/crdroid_donate_message"
            android:textAlignment="center"
            android:textColor="?android:attr/textColorSecondary" />

        <ProgressBar
            android:id="@+id/crdroid_donation_progress"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="100"
            android:visibility="gone"
            android:contentDescription="@string/crdroid_donation_progress_content_description"/>

        <TextView
            android:id="@+id/crdroid_donation_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:textColor="?android:attr/textColorPrimary"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/crdroid_donation_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:textColor="?android:attr/textColorSecondary"
            android:textSize="14sp"/>

        <Button
            android:id="@+id/crdroid_donate_button"
            android:drawableStart="@drawable/ic_donate_notification"
            android:drawablePadding="8dp"
            style="@style/Widget.AppCompat.Button.Borderless.Colored"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/crdroid_donate_button" />
    </LinearLayout>

    <Button
        android:id="@+id/crdroid_later_button"
        style="@style/Base.Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="48dp"
        android:paddingBottom="8dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="8dp"
        android:text="@string/crdroid_later_button" />
</RelativeLayout>
